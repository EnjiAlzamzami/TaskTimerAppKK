<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/layout_style2"
    >

    <LinearLayout
        android:id="@+id/topLay"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/frame_style5"
            android:elevation="15dp"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/helloTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:text="Hello,"
                android:textColor="@color/co7"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/fullnameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:text="Name of the user"
                android:textColor="@color/co7"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomLay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:background="@drawable/frame_style5"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLay">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:text="Username"
            android:textColor="@color/co7"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp">

            <TextView
                android:id="@+id/usernameTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_input2"
                android:drawableStart="@drawable/username_icon2"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="@string/username_hint"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Email"
            android:textColor="@color/co7"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp">

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_input2"
                android:drawableStart="@drawable/email_icon2"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="@string/email_hint"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <LinearLayout
        android:id="@+id/buttonLay"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@color/co6"
            app:cardCornerRadius="30dp"
            android:padding="10dp"
            app:cardElevation="10dp">


            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="3dp"
                android:background="@drawable/logout"
                android:padding="10dp"
                android:rotation="90"
                android:textColor="@color/co7" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@color/co6"
            app:cardCornerRadius="10dp"
            android:padding="10dp"
            app:cardElevation="10dp">

            <Button
                android:id="@+id/langBtn"
                android:background="@drawable/language1"
                android:padding="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textColor="@color/co7" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@color/co6"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">


            <Button
                android:id="@+id/deleteBtn"
                android:background="@drawable/remove"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="2dp"
                android:textColor="@color/co7" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>